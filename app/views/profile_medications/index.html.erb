<p id="notice"><%= notice %></p>

<h1>Listing Profile Medications</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Medication</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Count</th>
      <th>Unit</th>
      <th>Dose</th>
      <th>Unit</th>
      <th>Frequency</th>
      <th>Taken</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_medications.each do |profile_medication| %>
      <tr>
        <td><%= profile_medication.profile %></td>
        <td><%= profile_medication.medication %></td>
        <td><%= profile_medication.startDate %></td>
        <td><%= profile_medication.endDate %></td>
        <td><%= profile_medication.count %></td>
        <td><%= profile_medication.unit %></td>
        <td><%= profile_medication.dose %></td>
        <td><%= profile_medication.unit %></td>
        <td><%= profile_medication.frequency %></td>
        <td><%= profile_medication.taken %></td>
        <td><%= link_to 'Show', profile_medication %></td>
        <td><%= link_to 'Edit', edit_profile_medication_path(profile_medication) %></td>
        <td><%= link_to 'Destroy', profile_medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

